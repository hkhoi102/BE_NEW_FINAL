# Server Configuration
server.port=8084
spring.application.name=service-product

# Database Configuration
spring.datasource.url=jdbc:mysql://localhost:3306/product_db?createDatabaseIfNotExist=true&useUnicode=true&characterEncoding=utf8&useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
spring.datasource.username=${DB_USERNAME:root}
spring.datasource.password=${DB_PASSWORD:your-db-password}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA Configuration
# Temporarily set to 'create' to recreate all tables from scratch
# After first successful run, change back to 'update' to preserve data
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect
spring.jpa.properties.hibernate.format_sql=true
# Fix for Hibernate schema update issues
spring.jpa.properties.hibernate.hbm2ddl.jdbc_metadata_extraction_strategy=individually
# Explicitly set default catalog to avoid multiple table detection
spring.jpa.properties.hibernate.default_catalog=product_db

# Character Encoding
spring.jpa.properties.hibernate.connection.characterEncoding=utf8
spring.jpa.properties.hibernate.connection.CharSet=utf8
spring.jpa.properties.hibernate.connection.useUnicode=true

# Eureka Client Configuration
eureka.client.service-url.defaultZone=http://localhost:8761/eureka/
eureka.instance.prefer-ip-address=true
eureka.instance.hostname=localhost
eureka.instance.port=8084
eureka.client.register-with-eureka=true
eureka.client.fetch-registry=true
eureka.instance.lease-renewal-interval-in-seconds=5
eureka.instance.lease-expiration-duration-in-seconds=10
eureka.client.registry-fetch-interval-seconds=5

# Actuator Configuration
management.endpoints.web.exposure.include=health,info,metrics
management.endpoint.health.show-details=always

# Logging Configuration
logging.level.com.smartretail.serviceproduct=DEBUG
logging.level.org.springframework.web=DEBUG
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE

# File Upload Configuration
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB
spring.servlet.multipart.enabled=true

# Image Upload Configuration
app.upload.path=uploads/images
app.upload.max-size=5242880
app.upload.allowed-types=image/jpeg,image/png,image/gif,image/webp
app.upload.use-s3=true


# AWS S3 Configuration
# IMPORTANT: Set these via environment variables or use application-local.properties
# DO NOT commit real credentials to git!
aws.s3.access-key=${AWS_ACCESS_KEY_ID:your-aws-access-key}
aws.s3.secret-key=${AWS_SECRET_ACCESS_KEY:your-aws-secret-key}
aws.s3.region=${AWS_REGION:ap-southeast-2}
aws.s3.bucket-name=${AWS_S3_BUCKET:your-bucket-name}
aws.s3.folder=${AWS_S3_FOLDER:product-images}

